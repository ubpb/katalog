= render "application/search_panel",
  scope: current_scope,
  search_request: @search_request

.row
  .col-md-9
    .panel.panel-primary
      .panel-heading.panel-cutoffcorner
        .panel-title Sucheinstiege
      .panel-body
        .row
          .col-md-6
            .scope-info
              .image = image_tag "x-catalog.png", class: "img-responsive"
              .heading Katalog
              .info
                p ca. 1,6 Millionen Titel im Angebot der UB, z.B. Bücher, Zeitschriften, E-Books, E-Journals, CDs und DVDs

          .col-md-6
            .scope-info
              .image = image_tag "x-primo-central.png", class: "img-responsive"
              .heading Central Discovery Index
              .info
                p
                  ' Millionen Datensätze aus lizenzierten bibliographischen Daten- und Volltextdatenbanken wie Zeitschriftenartikel, E-Book-Kapitel, Einträge aus Nachschlagewerken und andere Materialien. Ergänzend empfehlen für eine vertiefte Suche und Nutzung von datenbankspezifischen Features unser Angebot an Fachdatenbanken
                  = link_to "https://dbis.uni-regensburg.de/fachliste.php?bib_id=ub_pb&lett=l&colors=&ocolors=", target: "_blank", style: "white-space: nowrap;" do
                    = fa_icon "external-link"
                    =< "Fachdatenbanken"
                  ' .

  .col-md-3
    .panel.panel-primary
      .panel-heading.panel-cutoffcorner
        .panel-title Neuigkeiten zum Katalog
      .panel-body
        - if @news.present?
          - @news.each do |item|
            div.feed-item
              div.feed-item-date
                = l(item[:date].to_date)
              div.feed-item-title
                a(href=item[:link] title=item[:description].html_safe)
                  = "#{item[:title].html_safe}"
        - else
          ' Aktuell keine Neuigkeiten
      - if @news.present?
        .panel-footer
          = link_to "&raquo; Alle Neuigkeiten".html_safe, "http://blogs.uni-paderborn.de/ub-katalog"

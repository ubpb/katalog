.panel.panel-primary
  .panel-heading.panel-cutoffcorner
    .row
      .col-sm-6
        = ractive_component "SortFieldSelect",
          search_request: search_request,
          searches_path: searches_path(scope: scope),
          sortable_fields: scope.sortable_fields.map { |_fieldname| [_fieldname, t("#{scope.search_engine_adapter.i18n_key}.fields.#{_fieldname}", default: _fieldname)] }
      .col-sm-6
        .pull-right
          = render "searches/index/pagination",
            scope: scope,
            search_request: search_request,
            search_result: search_result

  .panel-body
    #hits
      = render partial: "searches/index/hit",\
        collection: search_result.hits,\
        as: :hit,\
        locals: {\
          hits: search_result.hits,\
          scope: scope,\
          search_request: search_request,\
          search_result: search_result\
        }

  .panel-footer
    .row
      .col-sm-12
        .pull-right
          = render "searches/index/pagination",
            scope: scope,
            search_request: search_request,
            search_result: search_result

